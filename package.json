{
  "name": "tailwindcss-mcp-server",
  "version": "0.1.0",
  "description": "MCP server for TailwindCSS utility classes, documentation, and project assistance",
  "type": "module",
  "license": "MIT",
  "bin": {
    "tailwindcss-server": "build/index.js"
  },
  "files": [
    "build"
  ],
  "scripts": {
    "build": "tsc && node -e \"require('fs').chmodSync('build/index.js', '755')\"",
    "prepare": "npm run build",
    "watch": "tsc --watch",
    "inspector": "npx @modelcontextprotocol/inspector build/index.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "test:ci": "vitest run --coverage --reporter=junit --outputFile=test-results.xml"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.6.0",
    "axios": "^1.7.9",
    "cheerio": "^1.0.0-rc.12",
    "css-tree": "^3.1.0",
    "postcss": "^8.5.6"
  },
  "devDependencies": {
    "@types/css-tree": "^2.3.10",
    "@types/jest": "^30.0.0",
    "@types/node": "^20.11.24",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "happy-dom": "^18.0.1",
    "typescript": "^5.3.3",
    "vitest": "^3.2.4"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/your-github/tailwindcss-mcp-server.git"
  },
  "author": "Your Name <your.email@example.com>",
  "bugs": {
    "url": "https://github.com/your-github/tailwindcss-mcp-server/issues"
  },
  "homepage": "https://github.com/your-github/tailwindcss-mcp-server#readme",
  "keywords": [
    "tailwindcss",
    "css",
    "utility-first",
    "MCP",
    "model context protocol",
    "css-framework",
    "design-system",
    "responsive-design"
  ]
}
